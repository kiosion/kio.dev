{
  "sanity-cms/**/*.{ts,js}": [
    "pnpm --filter sanity-cms exec prettier --write"
  ],
  "svelte-app/**/*.{svelte,ts,js}": [
    "pnpm --filter svelte-app exec prettier --write",
    "pnpm --filter svelte-app exec eslint --fix"
  ],
  "svelte-app/src/languages/*.json": [
    "bun ./svelte-app/scripts/lint-json.ts",
    "bun ./svelte-app/scripts/generate-types.ts"
  ]
}
