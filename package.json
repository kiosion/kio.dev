{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Misc code for my art / development portfolio.",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "concurrently \"npx tsc\" \"npm run watch\" \"npm run serve\"",
    "serve": "node ./dist/index.js",
    "build:css": "postcss ./src/tailwind.css -o ./public/styles.css",
    "build:js": "npx tsc",
    "build": "npm run build:css & npm run build:js",
    "watch:css": "nodemon -e ejs,css -x 'npm run build:css'",
    "watch:js": "nodemon -e ts -x 'npm run build:js'",
    "watch": "npm run watch:css & npm run watch:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiosion/portfolio.git"
  },
  "author": "Kio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kiosion/portfolio/issues"
  },
  "homepage": "https://github.com/kiosion/portfolio#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.15",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "ejs": "^3.1.6",
    "express": "^4.17.3",
    "postcss-cli": "^9.1.0"
  }
}
