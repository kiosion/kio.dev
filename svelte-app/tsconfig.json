{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "module": "es2022",
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmit": true,
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$logs": ["logs"],
      "$components*": ["src/components*"],
      "$components/*": ["src/components/*"],
      "$helpers*": ["src/lib/helpers*"],
      "$helpers/*": ["src/lib/helpers/*"],
      "$stores*": ["src/stores*"],
      "$stores/*": ["src/stores/*"]
    },
    "removeComments": true,
    "rootDir": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "types": ["cypress", "vitest/globals", "node"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "cypress/**/*",
    "*.js",
    "*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
